{
  NeverAutoRemove
  {
	"^firmware-linux.*";
	"^linux-firmware$";
  };

  VersionedKernelPackages
  {
	"linux-image";
	"linux-headers";
	"linux-image-extra";
	"linux-signed-image";
	"linux-backports-modules-.*";
	"kfreebsd-image";
	"kfreebsd-headers";
	"gnumach-image";
  };

  Never-MarkAuto-Sections
  {
	"metapackages";
	"restricted/metapackages";
	"universe/metapackages";
	"multiverse/metapackages";
	"oldlibs";
	"restricted/oldlibs";
	"universe/oldlibs";
	"multiverse/oldlibs";
  };
};
